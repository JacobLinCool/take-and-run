{
	"name": "take-and-run",
	"version": "0.0.0",
	"type": "module",
	"author": {
		"name": "Jacob Lin",
		"email": "jacob@csie.cool"
	},
	"scripts": {
		"prepare": "husky install",
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"test": "playwright test",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest",
		"lint": "prettier --ignore-path .gitignore --check **/*.{ts,js,json,yaml,yml,svelte,html,css} && eslint .",
		"format": "prettier --ignore-path .gitignore --write **/*.{ts,js,json,yaml,yml,svelte,html,css}",
		"changeset": "changeset",
		"upload": "CF_PAGES=1 pnpm build && wrangler pages publish --project-name take-and-run .svelte-kit/cloudflare"
	},
	"devDependencies": {
		"@changesets/changelog-github": "^0.4.8",
		"@changesets/cli": "^2.26.2",
		"@playwright/test": "^1.35.1",
		"@sveltejs/adapter-auto": "^2.1.0",
		"@sveltejs/adapter-cloudflare": "^2.3.0",
		"@sveltejs/adapter-node": "^1.2.4",
		"@sveltejs/kit": "^1.21.0",
		"@tailwindcss/typography": "^0.5.9",
		"@trivago/prettier-plugin-sort-imports": "^4.1.1",
		"@types/debug": "^4.1.8",
		"@typescript-eslint/eslint-plugin": "^5.60.1",
		"@typescript-eslint/parser": "^5.60.1",
		"autoprefixer": "^10.4.14",
		"daisyui": "^3.1.7",
		"debug": "^4.3.4",
		"eslint": "^8.43.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"express": "^4.18.2",
		"husky": "^8.0.3",
		"lint-staged": "^13.2.3",
		"pixi-viewport": "^5.0.1",
		"pixi.js": "^7.2.4",
		"postcss": "^8.4.24",
		"prettier": "^3.0.0",
		"prettier-plugin-svelte": "^2.10.1",
		"prettier-plugin-tailwindcss": "^0.3.0",
		"socket.io": "^4.7.1",
		"socket.io-client": "^4.7.1",
		"svelte": "^4.0.1",
		"svelte-check": "^3.4.4",
		"svelte-i18n": "^3.6.0",
		"sveltekit-jwt": "^0.2.1",
		"tailwindcss": "^3.3.2",
		"tslib": "^2.6.0",
		"type-fest": "^3.12.0",
		"typescript": "^5.1.6",
		"vite": "^4.3.9",
		"vitest": "^0.32.2"
	},
	"lint-staged": {
		"*.{ts,js,json,yaml,yml,svelte,html,css}": [
			"prettier --write"
		]
	}
}
